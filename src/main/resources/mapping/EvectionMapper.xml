<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.gwd.mapper.EvectionMapper">

    <resultMap id="BaseResultMap" type="com.gwd.entity.Evection">
        <result column="id" jdbcType="INTEGER" property="id" />
        <result column="userid" jdbcType="INTEGER" property="userid" />
        <result column="evectionName" jdbcType="VARCHAR" property="evectionName" />
        <result column="num" jdbcType="DOUBLE" property="num" />
        <result column="beginDate" jdbcType="TIMESTAMP" property="beginDate" />
        <result column="endDate" jdbcType="TIMESTAMP" property="endDate" />
        <result column="reson" jdbcType="VARCHAR" property="reson" />
        <result column="state" jdbcType="INTEGER" property="state" />
    </resultMap>
    <select id="selectAll" resultMap="BaseResultMap">
        select * from tb_evection where userid = #{userId}
    </select>

    <update id="startTask">
        update tb_evection set state=1 where id=#{id}
    </update>

    <update id="endTask">
        update tb_evection set state=2 where id=#{id}
    </update>

    <select id="selectOne" resultMap="BaseResultMap">
        select * from tb_evection where id=#{id}
    </select>

    <insert id="save" parameterType="com.gwd.entity.Evection" useGeneratedKeys="true" keyProperty="id">
        insert into tb_evection (userid,evectionname,num,begindate,enddate,destination,reson,state) values (#{userid},#{evectionName},#{num},#{beginDate,jdbcType=DATE},#{endDate,jdbcType=DATE},#{destination},#{reson},#{state})
    </insert>
</mapper>